                          VerticalScrollBarVisibility="Never"
                          
                          SelectionMode="None"
                          ItemTapped="OnItemTapped"
                          BackgroundColor="Transparent"
                          CachingStrategy="RecycleElement"
                          ItemsSource="{Binding messages}">
                    --><!--ItemTemplate="{StaticResource usrDataTemplateSelector}">
                    
                    Time="{Binding Status}"
