                <!-- </StackLayout> -->
            </RelativeLayout>
            <StackLayout HorizontalOptions="Fill"
                         Orientation="Horizontal">
                <StackLayout
                    Margin="15, 0, 0, 0"
                    HorizontalOptions="FillAndExpand">
                    <StackLayout
                        x:Name="BackStackLayout"
                        Orientation="Horizontal"
                        HorizontalOptions="Start">
                        <Image Source="ic_arrow_back"
                               HeightRequest="15"
                               HorizontalOptions="Center" />
                        <Label
                            Text="{x:Static xamarinJkh:AppResources.Back}"
                            FontSize="15"
                            TextColor="White"
                            HorizontalOptions="Start" />
                    </StackLayout>
                    <Label x:Name="LabelNumber"
                           FontSize="20"
                           Margin="10, 10 ,0,0"
                           TextColor="White" />
                </StackLayout>
                <Frame CornerRadius="40"
                       Margin="0, 0, 15, -95"
                       HorizontalOptions="End"
                       BackgroundColor="#B5B5B5"
                       Padding="20,0,20,80">
                    <ScrollView
                        x:Name="ScrollView"
                        Orientation="Horizontal"
                                WidthRequest="125"
                                HeightRequest="100">
                        <StackLayout Orientation="Horizontal"
                                     >
                            <StackLayout
                                Margin="0,5,0,0"
                                x:Name="StackLayoutInfo"
                                VerticalOptions="Center"
                                HorizontalOptions="StartAndExpand">
                                <Image Source="ic_info_app1"
                                       HeightRequest="25" />
                                <Label Text="{x:Static xamarinJkh:AppResources.InfoApp}"
                                       TextColor="White"
                                       FontAttributes="Bold"
                                       FontSize="10" />
                            </StackLayout>
                            
                            <StackLayout
                                Margin="0,5,0,0"
                                VerticalOptions="Center"
                                x:Name="StackLayoutClose"
                                HorizontalOptions="EndAndExpand">
                                <Image Source="ic_close_app1"
                                       HeightRequest="25"
                                       WidthRequest="25" />
                                <Label Text="{x:Static xamarinJkh:AppResources.CloseApp}"
                                       TextColor="White"
                                       FontAttributes="Bold"
                                       FontSize="10" />
                            </StackLayout> 
                            <StackLayout
                                IsVisible="{Binding isPayd}"
                                Margin="0,5,0,0"
                                VerticalOptions="Center"
                                x:Name="StackLayoutPlay"
                                HorizontalOptions="EndAndExpand">
                                <Image Source="pay"
                                       HeightRequest="25"
                                       WidthRequest="25" />
                                <Label Text="{x:Static xamarinJkh:AppResources.PayApp}"
                                       TextColor="White"
                                       FontAttributes="Bold"
                                       FontSize="10" />
                            </StackLayout>
                           
                        </StackLayout>
                    </ScrollView>
                </Frame>
            </StackLayout>

            <customRenderers:MaterialFrame Elevation="20"
                                           x:Name="FrameMessage"
                                           CornerRadius="30"
                                           Margin="15, 0, 15, -30"
                                           BackgroundColor="White"
                                           Padding="5,0,5,70" VerticalOptions="FillAndExpand">
                <RefreshView x:Name="messageRefreshView" Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsRefreshing, Mode=OneWay}" VerticalOptions="FillAndExpand">
                    <ScrollView x:Name="scrollFroAppMessages" VerticalScrollBarVisibility="Never" VerticalOptions="FillAndExpand">
                        <StackLayout x:Name="baseForApp" VerticalOptions="FillAndExpand"></StackLayout>
                    </ScrollView>
                </RefreshView>
                
                
                <!--
                IsPullToRefreshEnabled="True"
                          RefreshCommand="{Binding RefreshCommand}"
                          IsRefreshing="{Binding IsRefreshing}"
                -->
                
                
                
