                                           Margin="15, 0, 15, -30"
                                           BackgroundColor="White"
                                           Padding="5,0,5,70">
                <RefreshView x:Name="messageRefreshView" Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsRefreshing, Mode=OneWay}">
                    <ScrollView x:Name="scrollFroAppMessages" VerticalScrollBarVisibility="Never" >
                        <StackLayout x:Name="baseForApp"></StackLayout>
                    </ScrollView>
                </RefreshView>
                
                
