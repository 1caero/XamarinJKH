                        x:Name="ScrollView"
                        Orientation="Horizontal"
                                WidthRequest="125"
                                HeightRequest="100">
                        <StackLayout Orientation="Horizontal"
                                     >
                            <StackLayout
                                Margin="0,5,0,0"
                                x:Name="StackLayoutInfo"
                                VerticalOptions="Center"
                                HorizontalOptions="StartAndExpand">
                                <Image Source="ic_info_app1"
                                       HeightRequest="25" />
                                <Label Text="Инфо"
                                       TextColor="White"
                                       FontAttributes="Bold"
                                       FontSize="10" />
                            </StackLayout>
                            
                            <StackLayout
                                Margin="0,5,0,0"
                                VerticalOptions="Center"
                                x:Name="StackLayoutClose"
                                HorizontalOptions="EndAndExpand">
                                <Image Source="ic_close_app1"
                                       HeightRequest="25"
                                       WidthRequest="25" />
                                <Label Text="Закрыть"
                                       TextColor="White"
                                       FontAttributes="Bold"
                                       FontSize="10" />
                            </StackLayout> 
                            <StackLayout
                                IsVisible="{Binding isPayd}"
                                Margin="0,5,0,0"
                                VerticalOptions="Center"
                                x:Name="StackLayoutPlay"
                                HorizontalOptions="EndAndExpand">
                                <Image Source="pay"
                                       HeightRequest="25"
                                       WidthRequest="25" />
                                <Label Text="Оплатить"
                                       TextColor="White"
                                       FontAttributes="Bold"
                                       FontSize="10" />
                            </StackLayout>
                           
                        </StackLayout>
                    </ScrollView>
