             xmlns:selector ="clr-namespace:xamarinJKH.Apps"
             xmlns:datatypes ="clr-namespace:xamarinJKH.Server.RequestModel"
             
             BackgroundColor="#F3F3F3"
             x:Class="xamarinJKH.Apps.AppPage">    
