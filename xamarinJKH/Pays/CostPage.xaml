<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xamarinJkh="clr-namespace:xamarinJKH;assembly=xamarinJKH"
             x:Class="xamarinJKH.Pays.CostPage">
    <ContentPage.Content>
        <StackLayout>
            <RelativeLayout
                Margin="0,0,0,-130"
                VerticalOptions="Start"
                HorizontalOptions="FillAndExpand">
                <Image x:Name="ImageTop" Margin="0, -26, 0 ,0"
                       RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=0,
                             Constant=0}"
                       RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Height,
                             Factor=0,
                             Constant=0}"
                       Source="ic_payed_ident"
                       VerticalOptions="Fill"
                       HorizontalOptions="Fill" />

                <StackLayout x:Name="StackLayout"
                    RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=0,
                             Constant=15}"
                    RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Height,
                             Factor=0,
                             Constant=10}"
                    Orientation="Vertical">
                    <Label x:Name="UkName"
                           Text="Название"
                           FontAttributes="Bold"
                           FontSize="20"
                           TextColor="White" />
                    <StackLayout
                        Orientation="Horizontal">
                        <xamarinJkh:IconView x:Name="IconViewLogin"
                                             Source="ic_phone"
                                             HeightRequest="15"
                                             Foreground="White"
                                             Margin="-10, 0,0,0"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Center" />
                        <Label x:Name="LabelPhone"
                               Text="Телефон"
                               FontSize="16"
                               TextColor="White"
                               Margin="-5, 0, 0, 0"
                               VerticalOptions="Center" />
                    </StackLayout>
                    <StackLayout
                        Orientation="Horizontal">
                        <xamarinJkh:IconView x:Name="IconViewTech"
                                             Source="ic_tech"
                                             HeightRequest="20"
                                             Foreground="White"
                                             Margin="0, 10,0,0"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Center" />
                        <Label x:Name="LabelTech"
                               Text="Написать в тех.поддержку"
                               FontSize="16"
                               TextDecorations="Underline"
                               TextColor="White"
                               Margin="-10, 10, 0, 0"
                               VerticalOptions="Center" />
                    </StackLayout>
                    <StackLayout
                        x:Name="BackStackLayout"
                        Orientation="Horizontal"
                        Margin="0, 40, 0, 0"
                        HorizontalOptions="Start">
                        <Image Source="ic_arrow_back"
                               HeightRequest="15"
                               HorizontalOptions="Center" />
                        <Label
                            Text="Назад "
                            FontSize="15"
                            TextColor="White"
                            HorizontalOptions="Start" />
                    </StackLayout>
                </StackLayout>
                <Image x:Name="IconViewNameUk"
                       Source="icon_login"
                       HeightRequest="70"
                       RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=0.75,
                             Constant=10}"
                       RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Height,
                             Factor=0,
                             Constant=25}" />
            </RelativeLayout>
            <StackLayout
                VerticalOptions="FillAndExpand">
                <ScrollView VerticalOptions="Start">
                    <Frame CornerRadius="30"
                           Margin="20, 0, 20, 15"
                           VerticalOptions="Start"
                           BackgroundColor="White"
                           Padding="0">

                        <StackLayout
                            Margin="10, 10, 10, 10">
                            <StackLayout
                                HorizontalOptions="Center"
                                Orientation="Horizontal">

                                <Label
                                    TextColor="Black"
                                    Text="Лицевой счет: "
                                    VerticalOptions="Center"
                                    FontAttributes="Bold"
                                    FontSize="15" />
                                <Picker x:Name="Picker" Title="Выбор"
                                        TitleColor="Red"
                                        VerticalOptions="Start"
                                        SelectedIndexChanged="picker_SelectedIndexChanged"
                                        ItemsSource="{Binding AllAcc}"
                                        ItemDisplayBinding="{Binding Ident}"
                                        SelectedItem="{Binding SelectedAcc}" />
                            </StackLayout>
                            <Label
                                x:Name="LabelMonth"
                                TextColor="Black"
                                Text="Оплата производится по квитанции за Март 2020"
                                VerticalOptions="Center"
                                HorizontalOptions="Center"
                                FontSize="15" />
                            <StackLayout
                                Orientation="Vertical"
                                Margin="0, 10, 5, 10">
                                <StackLayout
                                    Orientation="Horizontal">
                                    <xamarinJkh:IconView
                                        x:Name="IconViewUslugi"
                                        Source="ic_home"
                                        HeightRequest="25"
                                        Margin="-10,0,0,0"
                                        HorizontalOptions="Start"
                                        VerticalOptions="Center" />
                                    <Label
                                        Text="Услуги ЖКУ"
                                        FontSize="15"
                                        TextColor="Black"
                                        Margin="-10, 0, 0, 0"
                                        VerticalOptions="Center" />

                                    <Entry x:Name="EntrySum"
                                           FontSize="15"
                                           VerticalOptions="End"
                                           FontAttributes="Bold"
                                           Completed="Entry_Completed"
                                           TextChanged="EntrySum_OnTextChanged"
                                           HorizontalTextAlignment="Center"
                                           TextColor="Black"
                                           Keyboard="Numeric"
                                           HorizontalOptions="FillAndExpand" />
                                    <Label
                                        Text="руб."
                                        FontSize="12"
                                        TextColor="Gray"
                                        Margin="-5, 0, 0, 0"
                                        VerticalOptions="Center" />
                                </StackLayout>

                                <StackLayout
                                    Orientation="Horizontal">
                                    <Label
                                        HeightRequest="2"
                                        BackgroundColor="#DEDEDE"
                                        WidthRequest="150" />
                                    <Label
                                        x:Name="Labelseparator"
                                        HeightRequest="2"
                                        Margin="-10, 0, 0, 0"
                                        BackgroundColor="Red"
                                        HorizontalOptions="FillAndExpand" />

                                </StackLayout>

                                <Label
                                    HeightRequest="1"
                                    Margin="-10, 0, 0, 0"
                                    BackgroundColor="Gray"
                                    HorizontalOptions="CenterAndExpand" />

                                <Label
                                    x:Name="LabelTotal"
                                    Margin="-10, 0, 0, 0"
                                    HorizontalOptions="Center" />

                                <Label
                                    x:Name="LabelCommision"
                                    Margin="-10, 0, 0, 0"
                                    TextColor="Gray"
                                    Text="*Комиссия не взимается"
                                    HorizontalOptions="Center" />

                            </StackLayout>
                            <Frame CornerRadius="15"
                                   BackgroundColor="Red"
                                   Margin="20, 10, 20, 20"
                                   x:Name="FrameBtnLogin"
                                   Padding="0">
                                <Button x:Name="BtnLogin"
                                        Text="Оплатить"
                                        TextColor="White"
                                        FontAttributes="Bold"
                                        BackgroundColor="Transparent" />
                            </Frame>

                        </StackLayout>
                    </Frame>
                  
                </ScrollView>
                 
            </StackLayout>
             <StackLayout
                        HorizontalOptions="Center"
                        Margin="20, 0, 20, 10"
                        Spacing="20"
                        Orientation="Horizontal">
                        <Frame CornerRadius="10"
                               x:Name="FrameBtnHistory"
                               Padding="0"
                               MinimumWidthRequest="250"
                               HorizontalOptions="FillAndExpand">
                            <StackLayout
                                Orientation="Horizontal"
                                VerticalOptions="CenterAndExpand"
                                HorizontalOptions="CenterAndExpand">
                                <Button x:Name="LabelHistory"
                                        Text="      История платежей      "
                                        TextColor="White"
                                        FontAttributes="Bold"
                                        FontSize="12"
                                        BackgroundColor="Transparent" />
                            </StackLayout>
                        </Frame>

                        <Frame CornerRadius="10"
                               x:Name="FrameBtnSaldos"
                               Padding="0"
                               MinimumWidthRequest="250"
                               HorizontalOptions="FillAndExpand">
                            <StackLayout
                                Orientation="Horizontal"
                                VerticalOptions="CenterAndExpand"
                                HorizontalOptions="CenterAndExpand">
                                <Button x:Name="LabelSaldos"
                                        Text="          Квитанции          "
                                        FontSize="12"
                                        FontAttributes="Bold"
                                        Clicked="openSaldo"
                                        TextColor="White"
                                        BackgroundColor="Transparent" />
                            </StackLayout>
                        </Frame>
                    </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>