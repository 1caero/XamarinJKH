<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xamarinJkh="clr-namespace:xamarinJKH;assembly=xamarinJKH"
             xmlns:pancakeView="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:forms="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#F3F3F3}"
             x:Class="xamarinJKH.Notifications.NotificationOnePage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout HorizontalOptions="FillAndExpand" x:Name="Pancake2"
                         IsVisible="{OnPlatform iOS=true, Android=false}"
                         BackgroundColor="{AppThemeBinding Light=White, Dark=Black}" />

            <StackLayout
                Margin="25,10,15,0"
                Orientation="Horizontal"
                x:Name="Pancake">
                <Label x:Name="UkName" VerticalOptions="Center"
                       Text="Название"
                       FontAttributes="Bold"
                       HorizontalOptions="StartAndExpand"
                       FontSize="15"
                       TextColor="{AppThemeBinding Light=Black, Dark=Black}" />
                <StackLayout
                    HorizontalOptions="EndAndExpand"
                    Orientation="Horizontal">
                    <!--BackgroundColor="{AppThemeBinding Light=White, Dark=Transparent}"-->
                    <xamarinJkh:ButtonSupport x:Name="LabelTech" IsBlack="True"/>
                    <xamarinJkh:ButtonProfile x:Name="IconViewProfile" IsBlack="True" Margin="2,0,5,0" />

                </StackLayout>
            </StackLayout>
            <StackLayout Margin="0,20,0,0" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                <StackLayout VerticalOptions="Center"
                             x:Name="BackStackLayout"
                             Orientation="Horizontal"
                             Margin="10, 0, 10, 0"
                             HorizontalOptions="StartAndExpand">
                    <forms:SvgCachedImage
                        Source="resource://xamarinJKH.Resources.ic_arrow_back.svg"
                        HeightRequest="20"
                        HorizontalOptions="Start"
                        ReplaceStringMap="{Binding Files, Converter={x:StaticResource SvgColor}, ConverterParameter='#000000'}"
                        VerticalOptions="Center" />
                    <Label
                        Text="{x:Static xamarinJkh:AppResources.Back}"
                        FontSize="17"
                        x:Name="LabelTitle"
                        TextColor="Black"
                        FontAttributes="Bold"
                        VerticalOptions="Center"
                        HorizontalOptions="Start" />
                </StackLayout>
            </StackLayout>
            <ScrollView Orientation="Vertical"
                        Margin="0, 0, 0, 0">
                <StackLayout
                    VerticalOptions="StartAndExpand">
                    <StackLayout
                        Spacing="0"
                        Margin="35,0,35,0">
                        <Label x:Name="LabelDate"
                               HorizontalOptions="Start"
                               TextColor="Black"
                               FontSize="15"
                               Text="23.05.2020" />
                        <Label x:Name="LabelText"
                               HorizontalOptions="Start"
                               Margin="0, 20, 0, 0"
                               FontSize="15"
                               TextColor="Black"
                               Text="Большой текст" />
                    </StackLayout>
                    <Image x:Name="ImageAdd"
                           IsVisible="False"
                           HeightRequest="200"
                           Aspect="Fill"
                           Source="ic_background_event" />
                    <Frame CornerRadius="15"
                           BackgroundColor="Red"
                           Margin="40, 10, 40, 0"
                           IsVisible="False"
                           HasShadow="{AppThemeBinding Light=false, Dark=true}"
                           x:Name="FrameBtnQuest"
                           Padding="0">
                        <Button x:Name="BtnQuest"
                                Text="Пройти опрос"
                                TextColor="White"
                                FontAttributes="Bold"
                                BackgroundColor="Transparent"
                                Clicked="ButtonClick" />
                    </Frame>
                    <CollectionView ItemsSource="{Binding Files}"
                                    SelectionMode="Single"
                                    SelectionChanged="OnCollectionViewSelectionChanged"
                                    HorizontalOptions="CenterAndExpand" x:Name="CollectionViewFiles">

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10" HorizontalOptions="CenterAndExpand">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <xamarinJkh:IconView
                                        Source="ic_file_download"
                                        Grid.Row="0"
                                        Foreground="{x:DynamicResource MainColor}"
                                        HeightRequest="60"
                                        HorizontalOptions="CenterAndExpand"
                                        WidthRequest="60" />
                                    <Label Grid.Column="0"
                                           Grid.Row="1"
                                           HorizontalTextAlignment="Center"
                                           Text="{Binding Description}"
                                           FontAttributes="Bold" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>