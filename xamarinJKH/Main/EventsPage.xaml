<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xamarinJkh="clr-namespace:xamarinJKH;assembly=xamarinJKH"
             BackgroundColor="#F3F3F3"
             x:Class="xamarinJKH.Main.EventsPage">
    <ContentPage.Content>
        <StackLayout>
            <RelativeLayout HorizontalOptions="FillAndExpand">
                <Image x:Name="ImageFon"
                       Margin="0, -26, 0 ,0"
                       RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=0,
                             Constant=0}"
                       RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Height,
                             Factor=0,
                             Constant=0}"
                       Source="ic_background_event"
                       VerticalOptions="Fill"
                       HorizontalOptions="Fill" />

                <StackLayout
                    x:Name="StackLayout"
                    RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=0,
                             Constant=15}"
                    RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Height,
                             Factor=0,
                             Constant=10}"
                    Orientation="Vertical">
                    <Label x:Name="UkName"
                           Text="Название"
                           FontAttributes="Bold"
                           FontSize="20"
                           TextColor="White" />
                    <StackLayout
                        Orientation="Horizontal">
                        <xamarinJkh:IconView x:Name="IconViewLogin"
                                             Source="ic_phone"
                                             HeightRequest="15"
                                             Foreground="White"
                                             Margin="-10, 0,0,0"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Center" />
                        <Label x:Name="LabelPhone"
                               Text="Телефон"
                               FontSize="16"
                               TextColor="White"
                               Margin="-5, 0, 0, 0"
                               VerticalOptions="Center" />
                    </StackLayout>
                    <StackLayout
                        Orientation="Horizontal">
                        <xamarinJkh:IconView x:Name="IconViewTech"
                                             Source="ic_tech"
                                             HeightRequest="20"
                                             Foreground="White"
                                             Margin="0, 10,0,0"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Center" />
                        <Label x:Name="LabelTech"
                               Text="Написать в тех.поддержку"
                               FontSize="16"
                               TextDecorations="Underline"
                               TextColor="White"
                               Margin="-10, 10, 0, 0"
                               VerticalOptions="Center" />
                    </StackLayout>
                </StackLayout>
                <Image x:Name="IconViewNameUk"
                       Source="icon_login"
                       HeightRequest="70"
                       RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=0.75,
                             Constant=10}"
                       RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Height,
                             Factor=0,
                             Constant=25}" />
            </RelativeLayout>


            <ScrollView Orientation="Vertical"
                        VerticalOptions="StartAndExpand"
                        Margin="20, -170, 20, 0">
                <StackLayout
                    VerticalOptions="StartAndExpand">

                    <Frame x:Name="FrameNotification"
                           CornerRadius="30"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="Start"
                           BackgroundColor="White"
                           Padding="0, 25, 0, 25"
                           Margin="0,0,0,10">
                        <StackLayout
                            Orientation="Horizontal">
                            <xamarinJkh:IconView
                                x:Name="IconViewNotification"
                                Source="ic_notification"
                                HeightRequest="30"
                                Margin="-10, 0, 0, 0"
                                HorizontalOptions="Start"
                                VerticalOptions="Center" />
                            <Label
                                Text="Уведомления"
                                FontSize="20"
                                TextColor="Black"
                                FontAttributes="Bold"
                                Margin="0, 0, 0, 0"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="Center" />
                            <xamarinJkh:IconView
                                x:Name="IconViewForvardNotification"
                                Source="ic_arrow_forward"
                                HeightRequest="25"
                                HorizontalOptions="End"
                                VerticalOptions="Center" />
                        </StackLayout>
                    </Frame>
                    <Frame x:Name="FrameNews"
                           CornerRadius="30"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="Start"
                           BackgroundColor="White"
                           Padding="0, 25, 0, 25">
                        <StackLayout
                            Orientation="Horizontal">
                            <xamarinJkh:IconView
                                x:Name="IconViewNews"
                                Source="ic_news"
                                HeightRequest="30"
                                Margin="-10, 0, 0, 0"
                                HorizontalOptions="Start"
                                VerticalOptions="Center" />
                            <Label
                                Text="Новости"
                                FontSize="20"
                                TextColor="Black"
                                FontAttributes="Bold"
                                Margin="0, 0, 0, 0"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="Center" />
                            <xamarinJkh:IconView
                                x:Name="IconViewForvardNews"
                                Source="ic_arrow_forward"
                                HeightRequest="25"
                                HorizontalOptions="End"
                                VerticalOptions="Center" />
                        </StackLayout>
                    </Frame>
                    <Frame x:Name="FrameQuestions"
                           CornerRadius="30"
                           Margin="0, 10, 0, 10"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="Start"
                           BackgroundColor="White"
                           Padding="0, 25, 0, 25">
                        <StackLayout
                            Orientation="Horizontal">
                            <xamarinJkh:IconView
                                x:Name="IconViewQuestions"
                                Source="ic_questions2"
                                HeightRequest="30"
                                Foreground="Red"
                                Margin="-10, 0, 0, 0"
                                HorizontalOptions="Start"
                                VerticalOptions="Center" />
                            <Label
                                Text="Опросы"
                                FontSize="20"
                                TextColor="Black"
                                FontAttributes="Bold"
                                Margin="0, 0, 0, 0"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="Center" />
                            <xamarinJkh:IconView
                                x:Name="IconViewForvardQuestions"
                                Source="ic_arrow_forward"
                                HeightRequest="25"
                                Foreground="Red"
                                HorizontalOptions="End"
                                VerticalOptions="Center" />
                        </StackLayout>
                    </Frame>
                    <Frame x:Name="FrameOffers"
                           CornerRadius="30"
                           Margin="0, 0, 0, 10"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="Start"
                           BackgroundColor="White"
                           Padding="0, 25, 0, 25">
                        <StackLayout
                            Orientation="Horizontal">
                            <xamarinJkh:IconView
                                x:Name="IconViewOffers"
                                Source="ic_diskont"
                                HeightRequest="30"
                                Foreground="Red"
                                Margin="-10, 0, 0, 0"
                                HorizontalOptions="Start"
                                VerticalOptions="Center" />
                            <Label
                                Text="Специальные предложения"
                                FontSize="20"
                                TextColor="Black"
                                Margin="0, 0, 0, 0"
                                FontAttributes="Bold"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="Center" />
                            <xamarinJkh:IconView
                                x:Name="IconViewForvardOffers"
                                Source="ic_arrow_forward"
                                HeightRequest="25"
                                Foreground="Red"
                                HorizontalOptions="End"
                                VerticalOptions="Center" />
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </ScrollView>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>