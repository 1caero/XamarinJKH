<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xamarinJkh="clr-namespace:xamarinJKH;assembly=xamarinJKH"
             xmlns:local="clr-namespace:xamarinJKH"
             xmlns:main="clr-namespace:xamarinJKH.Main;assembly=xamarinJKH"
             xmlns:apps="clr-namespace:xamarinJKH.Apps;assembly=xamarinJKH"
             xmlns:pancakeView="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#F3F3F3}"
             x:Class="xamarinJKH.Main.AppsPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <xamarinJkh:HeaderViewMain Title="{x:Static xamarinJkh:AppResources.App_NavBar}"
                                       Grid.Row="0"
                                       Grid.RowSpan="3"
                                       Picture="ic_app_top"/>
            <StackLayout Grid.Row="1"
                         BackgroundColor="Transparent"
                         Grid.RowSpan="2">
                <StackLayout VerticalOptions="FillAndExpand"
                             BackgroundColor="Transparent">
                    <ListView x:Name="additionalList"
                          HasUnevenRows="True"
                          Margin="10, 10, 10, 0"
                          SelectionMode="None"
                          SeparatorVisibility="None"
                          VerticalScrollBarVisibility="Never"
                          ItemTapped="OnItemTapped"
                          CachingStrategy="RecycleElement"
                          ItemsSource="{Binding Requests, Mode=TwoWay}"
                          >

                        <ListView.ItemTemplate>

                            <DataTemplate>
                                <apps:AppCell
                                Number="{Binding RequestNumber}"
                                Status="{Binding Status}"
                                DateApp="{Binding Added}"
                                StatusID="{Binding StatusID}"
                                TextApp="{Binding Name}" />
                            </DataTemplate>

                        </ListView.ItemTemplate>
                    </ListView>
                    <pancakeView:PancakeView x:Name="GoodsLayot" CornerRadius="50,50,0,0" BackgroundColor="{AppThemeBinding Light=White, Dark=#8D8D8D}"
                                         Padding="0,10,0,2"
                                         BorderThickness="1"
                                         Margin="0"
                                         VerticalOptions="FillAndExpand">
                        <StackLayout
                        HorizontalOptions="Center"
                        Margin="20, 10, 20, 15"
                        Spacing="20"
                        Orientation="Horizontal">
                            <StackLayout
                            Orientation="Horizontal">
                                <Switch
                                OnColor="{x:DynamicResource MainColor}"
                                IsToggled="{Binding ShowClosed, Mode=TwoWay}"
                                x:Name="SwitchApp"
                                VerticalOptions="Center"  />

                                <Label Text="{x:Static xamarinJkh:AppResources.ShowClosedApps}"
                                   x:Name="LabelSwitch"
                                   FontAttributes="Bold"
                                   FontSize="15"
                                   TextColor="{AppThemeBinding Light=Black, Dark=White}"
                                   VerticalOptions="CenterAndExpand"
                                   HorizontalOptions="Center" />
                            </StackLayout>
                            <!-- iphone -->
                            <Frame CornerRadius="10"
                               x:Name="FrameBtnAddIos"
                               Padding="15,5,15,5"
                               Margin="0,0,0,3"
                               MinimumWidthRequest="300"
                               MinimumHeightRequest="30"
                               HeightRequest="3"
                               BackgroundColor="{x:DynamicResource MainColor}"
                               HorizontalOptions="FillAndExpand">
                                <StackLayout
                                Orientation="Horizontal"
                                VerticalOptions="Center"
                                HorizontalOptions="FillAndExpand">
                                    <local:IconView x:Name="IconAddApp"
                                                Source="icon_add_app"
                                                HeightRequest="20"
                                                WidthRequest="20"
                                                VerticalOptions="Center" />
                                    <Label x:Name="BtnExit"
                                       Text="{x:Static xamarinJkh:AppResources.Create}"
                                       FontSize="15"
                                       TextColor="White"
                                       HorizontalOptions="FillAndExpand"
                                       VerticalOptions="Center" />
                                </StackLayout>
                            </Frame>
                            <Frame CornerRadius="10"
                               x:Name="FrameBtnAdd"
                               Padding="0"
                               BackgroundColor="{Binding hex}"
                               HorizontalOptions="FillAndExpand">
                                <StackLayout
                                Orientation="Horizontal"
                                Spacing="0"
                                Margin="18,0,0,0"
                                VerticalOptions="CenterAndExpand"
                                HorizontalOptions="Center">
                                    <xamarinJkh:IconView
                                    Source="icon_add_app"
                                    Foreground="White"
                                    x:Name="IconViewSaldos"
                                    HeightRequest="24"
                                    WidthRequest="20" />
                                    <Button x:Name="LabelSaldos"
                                        Text="{x:Static xamarinJkh:AppResources.Create}"
                                        FontSize="15"
                                        Padding="0"
                                        FontAttributes="Bold"
                                        TextColor="White"
                                        Clicked="startNewApp"
                                        BackgroundColor="Transparent" />
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </pancakeView:PancakeView>
                </StackLayout>
            </StackLayout>
        </Grid>

    </ContentPage.Content>
</ContentPage>