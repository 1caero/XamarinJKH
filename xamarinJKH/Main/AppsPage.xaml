<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xamarinJkh="clr-namespace:xamarinJKH;assembly=xamarinJKH"
             xmlns:local="clr-namespace:xamarinJKH"
             xmlns:main="clr-namespace:xamarinJKH.Main;assembly=xamarinJKH"
             xmlns:apps="clr-namespace:xamarinJKH.Apps;assembly=xamarinJKH"
             xmlns:pancakeView="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             BackgroundColor="#F3F3F3"
             x:Class="xamarinJKH.Main.AppsPage">
    <ContentPage.Content>
        <StackLayout>
            <RelativeLayout
                x:Name="ScrollViewContainer"
                Margin="0,0,0,-140" VerticalOptions="Start" HorizontalOptions="FillAndExpand">
                <Image x:Name="ImageFon"
                       Margin="0, -26, 0 , 0"
                       RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=0,
                             Constant=0}"
                       RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Height,
                             Factor=0,
                             Constant=0}"
                       Source="ic_app_top"
                       VerticalOptions="Fill"
                       HorizontalOptions="Fill" />

                <StackLayout
                    x:Name="StackLayout"
                    RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=0,
                             Constant=15}"
                    RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Height,
                             Factor=0,
                             Constant=10}"
                    Orientation="Vertical">
                    <Label x:Name="UkName"
                           Text="Название"
                           FontAttributes="Bold"
                           FontSize="20"
                           TextColor="White" />
                    <StackLayout
                        Orientation="Horizontal">
                        <xamarinJkh:IconView x:Name="IconViewLogin"
                                             Source="ic_phone"
                                             HeightRequest="15"
                                             Foreground="White"
                                             Margin="-10, 0,0,0"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Center" />
                        <Label x:Name="LabelPhone"
                               Text="Телефон"
                               FontSize="16"
                               TextColor="White"
                               Margin="-5, 0, 0, 0"
                               VerticalOptions="Center" />
                    </StackLayout>
                    <StackLayout
                        Orientation="Horizontal">
                        <xamarinJkh:IconView x:Name="IconViewTech"
                                             Source="ic_tech"
                                             HeightRequest="20"
                                             Foreground="White"
                                             Margin="0, 10,0,0"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Center" />
                        <Label x:Name="LabelTech"
                               Text="Написать в тех.поддержку"
                               FontSize="16"
                               TextDecorations="Underline"
                               TextColor="White"
                               Margin="-10, 10, 0, 0"
                               VerticalOptions="Center" />
                    </StackLayout>
                    <StackLayout
                        x:Name="BackStackLayout"
                        Orientation="Horizontal"
                        Margin="5, 55, 0, 0"
                        HorizontalOptions="Start">
                        <Label
                            Text="Заявки"
                            FontSize="25"
                            TextColor="White"
                            FontAttributes="Bold"
                            HorizontalOptions="Start" />
                    </StackLayout>
                </StackLayout>
                <Image x:Name="IconViewNameUk"
                       Source="icon_login"
                       HeightRequest="70"
                       RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=0.75,
                             Constant=10}"
                       RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Height,
                             Factor=0,
                             Constant=25}" />
            </RelativeLayout>
            <StackLayout VerticalOptions="FillAndExpand">
                <ListView x:Name="additionalList"
                          HasUnevenRows="True"
                          Margin="10, 0, 10, 0"
                          SeparatorVisibility="None"
                          VerticalScrollBarVisibility="Never"
                          IsPullToRefreshEnabled="True"
                          RefreshCommand="{Binding RefreshCommand}"
                          IsRefreshing="{Binding IsRefreshing}"
                          SelectionMode="None"
                          ItemTapped="OnItemTapped"
                          ItemsSource="{Binding RequestInfos}">
                    <ListView.Header>

                    </ListView.Header>
                    <ListView.ItemTemplate>

                        <DataTemplate>
                            <apps:AppCell
                                Number="{Binding RequestNumber}"
                                Status="{Binding Status}"
                                DateApp="{Binding Added}"
                                TextApp="{Binding Name}" />
                        </DataTemplate>

                    </ListView.ItemTemplate>
                </ListView>
                <pancakeView:PancakeView x:Name="GoodsLayot" CornerRadius="50,50,0,0" BackgroundColor="#8D8D8D"
                                         Padding="0,10,0,2"
                                         Margin="0"
                                         VerticalOptions="FillAndExpand">
                    <StackLayout
                        HorizontalOptions="Center"
                        Margin="20, 10, 20, 15"
                        Spacing="20"
                        Orientation="Horizontal">
                        <StackLayout
                            Orientation="Horizontal">
                            <Switch
                                OnColor="{Binding hex}"
                                IsToggled="False"
                                PropertyChanged="change"
                                x:Name="SwitchApp"
                                VerticalOptions="Center"/>

                            <Label Text="Показать закрытые"
                                   x:Name="LabelSwitch"
                                   FontAttributes="Bold"
                                   FontSize="15"
                                   TextColor="White"
                                   VerticalOptions="CenterAndExpand"
                                   HorizontalOptions="Center" />
                        </StackLayout>

                        <Frame CornerRadius="10"
                               x:Name="FrameBtnAdd"
                               Padding="15,5,15,5"
                               Margin="0,0,0,3"
                               MinimumWidthRequest="300"
                               MinimumHeightRequest="30"
                               HeightRequest="3"
                               BackgroundColor="{Binding hex}"
                               HorizontalOptions="FillAndExpand">
                            <StackLayout
                                Orientation="Horizontal"
                                VerticalOptions="Center"
                                HorizontalOptions="FillAndExpand">
                                <local:IconView x:Name="IconAddApp"
                                            Source="icon_add_app"
                                            HeightRequest="20"
                                            WidthRequest="20"
                                            VerticalOptions="Center" />
                                <Label x:Name="BtnExit"
                                        Text="Создать"
                                        FontSize="15"
                                        TextColor="White"
                                        HorizontalOptions="FillAndExpand" 
                                        VerticalOptions="Center"/>
                            </StackLayout>
                        </Frame>
                    </StackLayout>
                </pancakeView:PancakeView>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>