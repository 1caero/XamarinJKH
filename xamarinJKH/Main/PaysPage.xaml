<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xamarinJkh="clr-namespace:xamarinJKH;assembly=xamarinJKH"
             xmlns:questions="clr-namespace:xamarinJKH.Questions;assembly=xamarinJKH"
             xmlns:main="clr-namespace:xamarinJKH.Main;assembly=xamarinJKH"
             xmlns:pancakeView="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             BackgroundColor="#F3F3F3"
             x:Class="xamarinJKH.Main.PaysPage">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Image x:Name="ImageFon"
                       Source="ic_pays_top"
                       Margin="0,20,0,0"
                       VerticalOptions="Start"
                       Aspect="AspectFill"
                       HorizontalOptions="FillAndExpand" />
                <StackLayout>
                    <pancakeView:PancakeView
                        Padding="0"
                        CornerRadius="0,0,25,25"
                        BackgroundColor="#131313"
                        MinimumHeightRequest="102"
                        HorizontalOptions="Fill"
                        VerticalOptions="StartAndExpand"
                        x:Name="Pancake"
                        IsClippedToBounds="True">
                        <Grid IsClippedToBounds="True">
                            <StackLayout Orientation="Horizontal"
                                         VerticalOptions="FillAndExpand"
                                         HorizontalOptions="FillAndExpand">
                                <StackLayout Padding="10"
                                             HorizontalOptions="FillAndExpand">
                                    <Label x:Name="UkName"
                                           Text="Название"
                                           FontAttributes="Bold"
                                           FontSize="16"
                                           TextColor="White" />
                                    <StackLayout
                                        Spacing="0"
                                        Orientation="Horizontal">
                                        <xamarinJkh:IconView x:Name="IconViewLogin"
                                                             Source="ic_phone"
                                                             HeightRequest="15"
                                                             Foreground="White"
                                                             Margin="-10, 0,0,0"
                                                             HorizontalOptions="Start"
                                                             VerticalOptions="Center" />
                                        <Label x:Name="LabelPhone"
                                               Text="Телефон"
                                               FontSize="14"
                                               TextColor="White"
                                               Margin="-5, 0, 0, 0"
                                               VerticalOptions="Center" />
                                    </StackLayout>
                                </StackLayout>
                                <pancakeView:PancakeView
                                    BorderColor="Gray"
                                    x:Name="PancakeViewIcon"
                                    BorderThickness="1"
                                    Padding="15"
                                    CornerRadius="25,0,25,25"
                                    BackgroundColor="White"
                                    HorizontalOptions="End"
                                    IsClippedToBounds="True">
                                    <Image x:Name="IconViewNameUk"
                                           Source="icon_login"
                                           HeightRequest="50" />
                                </pancakeView:PancakeView>
                            </StackLayout>
                        </Grid>
                    </pancakeView:PancakeView>
                    <StackLayout
                        HorizontalOptions="End"
                        Margin="0,0,15,0"
                        Orientation="Horizontal">
                        <xamarinJkh:IconView x:Name="IconViewTech"
                                             Source="ic_tech"
                                             HeightRequest="20"
                                             Foreground="White"
                                             Margin="0, 0,0,0"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Center" />
                        <Label x:Name="LabelTech"
                               Text="Написать в тех.поддержку"
                               FontSize="14"
                               TextDecorations="Underline"
                               TextColor="White"
                               Margin="-10, 0, 0, 0"
                               VerticalOptions="Center" />
                    </StackLayout>
                    <StackLayout
                        x:Name="BackStackLayout"
                        Orientation="Horizontal"
                        Margin="25, 0, 0, 0"
                        HorizontalOptions="Start">
                        <Label
                            Text="Оплата"
                            FontSize="23"
                            TextColor="White"
                            FontAttributes="Bold"
                            HorizontalOptions="Start" />
                    </StackLayout>
                    <StackLayout
                       >
                        <Frame x:Name="FrameAddIdent"
                               CornerRadius="40"
                               Margin="20, 10, 20, -60"
                               VerticalOptions="Start"
                               BackgroundColor="#494949"
                               Padding="20,20,20,60">
                            <Label
                                Text="+ Подключить лицевой счет"
                                TextDecorations="Underline"
                                FontAttributes="Bold"
                                Margin="0,0,0,15"
                                HorizontalOptions="CenterAndExpand"
                                TextColor="White"
                                FontSize="15" />
                        </Frame>
                        <ListView x:Name="additionalList"
                                  HasUnevenRows="True"
                                  Margin="10, 0, 10, 0"
                                  SeparatorVisibility="None"
                                  VerticalScrollBarVisibility="Never"
                                  IsPullToRefreshEnabled="True"
                                  RefreshCommand="{Binding RefreshCommand}"
                                  IsRefreshing="{Binding IsRefreshing}"
                                  SelectionMode="None"
                                  ItemTapped="OnItemTapped"
                                  ItemsSource="{Binding _accountingInfo}">
                            <ListView.Header>

                            </ListView.Header>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <main:PaysCell
                                        Ident="{Binding Ident}"
                                        AdressIdent="{Binding Address}"
                                        DateIdent="{Binding DebtActualDate}"
                                        SumPay="{Binding Sum}" />
                                </DataTemplate>

                            </ListView.ItemTemplate>
                        </ListView>
                        <StackLayout
                            >
                            <pancakeView:PancakeView x:Name="GoodsLayot" Elevation="20" CornerRadius="50,50,0,0"
                                                     BackgroundColor="#8D8D8D"
                                                     Padding="0,20,0,10"
                                                     VerticalOptions="FillAndExpand">
                                <!-- <StackLayout -->
                                <!--     HorizontalOptions="FillAndExpand" -->
                                <!--   -->
                                <!--     Orientation="Horizontal"> -->
                                <Grid HorizontalOptions="FillAndExpand"
                                      ColumnSpacing="10"
                                      Margin="20, 0, 20, 10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Frame CornerRadius="10"
                                           x:Name="FrameBtnHistory"
                                           Padding="0"
                                           Grid.Column="0" Grid.Row="0">
                                        <StackLayout
                                            Orientation="Horizontal"
                                            Spacing="7"
                                            VerticalOptions="CenterAndExpand"
                                            HorizontalOptions="Center">
                                            <xamarinJkh:IconView
                                                Source="ic_history_pay"
                                                Foreground="{Binding hex}"
                                                HeightRequest="24"
                                                WidthRequest="20" />
                                            <Button x:Name="LabelHistory"
                                                    Text="История платежей"
                                                    TextColor="White"
                                                    Padding="0"
                                                    FontAttributes="Bold"
                                                    Clicked="OpenHistory"
                                                    FontSize="12"
                                                    BackgroundColor="Transparent" />
                                        </StackLayout>
                                    </Frame>

                                    <Frame CornerRadius="10"
                                           x:Name="FrameBtnSaldos"
                                           Padding="0"
                                           Grid.Column="1" Grid.Row="0"
                                           HorizontalOptions="FillAndExpand">
                                        <StackLayout
                                            Orientation="Horizontal"
                                            Spacing="0"
                                            Margin="18,0,0,0"
                                            VerticalOptions="CenterAndExpand"
                                            HorizontalOptions="Center">
                                            <xamarinJkh:IconView
                                                Source="ic_saldos"
                                                Foreground="{Binding hex}"
                                                x:Name="IconViewSaldos"
                                                HeightRequest="24"
                                                WidthRequest="20" />
                                            <Button x:Name="LabelSaldos"
                                                    Text="Квитанции"
                                                    FontSize="12"
                                                    Padding="0"
                                                    FontAttributes="Bold"
                                                    TextColor="White"
                                                    Clicked="openSaldo"
                                                    BackgroundColor="Transparent" />
                                        </StackLayout>
                                    </Frame>
                                </Grid>
                                <!-- </StackLayout> -->
                            </pancakeView:PancakeView>

                        </StackLayout>
                    </StackLayout>
                </StackLayout>
            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>