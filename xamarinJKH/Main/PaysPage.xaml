<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xamarinJkh="clr-namespace:xamarinJKH;assembly=xamarinJKH"
             xmlns:questions="clr-namespace:xamarinJKH.Questions;assembly=xamarinJKH"
             xmlns:main="clr-namespace:xamarinJKH.Main;assembly=xamarinJKH"
             xmlns:pancakeView="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             BackgroundColor="#F3F3F3"
             x:Class="xamarinJKH.Main.PaysPage">
    <ContentPage.Content>
        <StackLayout>
            <RelativeLayout
                Margin="0,0,0,-140"
                VerticalOptions="Start"
                x:Name="RelativeLayoutTop"
                HorizontalOptions="FillAndExpand">
                <Image x:Name="ImageFon"
                       Margin="0, -26, 0 ,0"
                       RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=0,
                             Constant=0}"
                       RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Height,
                             Factor=0,
                             Constant=0}"
                       Source="ic_pays_top"
                       VerticalOptions="Fill"
                       HorizontalOptions="Fill" />

                <StackLayout
                    x:Name="StackLayout"
                    RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=0,
                             Constant=15}"
                    RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Height,
                             Factor=0,
                             Constant=10}"
                    Orientation="Vertical">
                    <Label x:Name="UkName"
                           Text="Название"
                           FontAttributes="Bold"
                           FontSize="20"
                           TextColor="White" />
                    <StackLayout
                        Orientation="Horizontal">
                        <xamarinJkh:IconView x:Name="IconViewLogin"
                                             Source="ic_phone"
                                             HeightRequest="15"
                                             Foreground="White"
                                             Margin="-10, 0,0,0"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Center" />
                        <Label x:Name="LabelPhone"
                               Text="Телефон"
                               FontSize="16"
                               TextColor="White"
                               Margin="-5, 0, 0, 0"
                               VerticalOptions="Center" />
                    </StackLayout>
                    <StackLayout
                        Orientation="Horizontal">
                        <xamarinJkh:IconView x:Name="IconViewTech"
                                             Source="ic_tech"
                                             HeightRequest="20"
                                             Foreground="White"
                                             Margin="0, 10,0,0"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Center" />
                        <Label x:Name="LabelTech"
                               Text="Написать в тех.поддержку"
                               FontSize="16"
                               TextDecorations="Underline"
                               TextColor="White"
                               Margin="-10, 10, 0, 0"
                               VerticalOptions="Center" />
                    </StackLayout>
                    <StackLayout
                        x:Name="BackStackLayout"
                        Orientation="Horizontal"
                        Margin="5, 55, 0, 0"
                        HorizontalOptions="Start">
                        <Label
                            Text="Оплата"
                            FontSize="25"
                            TextColor="White"
                            FontAttributes="Bold"
                            HorizontalOptions="Start" />
                    </StackLayout>
                </StackLayout>
                <Image x:Name="IconViewNameUk"
                       Source="icon_login"
                       HeightRequest="70"
                       RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=0.75,
                             Constant=10}"
                       RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Height,
                             Factor=0,
                             Constant=25}" />
            </RelativeLayout>
            <StackLayout
                VerticalOptions="FillAndExpand">
                <Frame x:Name="FrameAddIdent"
                       CornerRadius="40"
                       Margin="20, 0, 20, -60"
                       VerticalOptions="Start"
                       BackgroundColor="#494949"
                       Padding="20,20,20,60">
                    <Label
                        Text="+ Подключить лицевой счет"
                        TextDecorations="Underline"
                        FontAttributes="Bold"
                        Margin="0,0,0,15"
                        HorizontalOptions="CenterAndExpand"
                        TextColor="White"
                        FontSize="15" />
                </Frame>
                <ListView x:Name="additionalList"
                          HasUnevenRows="True"
                          Margin="10, 0, 10, 0"
                          SeparatorVisibility="None"
                          VerticalScrollBarVisibility="Never"
                          IsPullToRefreshEnabled="True"
                          RefreshCommand="{Binding RefreshCommand}"
                          IsRefreshing="{Binding IsRefreshing}"
                          SelectionMode="None"
                          ItemTapped="OnItemTapped"
                          ItemsSource="{Binding _accountingInfo}">
                    <ListView.Header>

                    </ListView.Header>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <main:PaysCell
                                Ident="{Binding Ident}"
                                AdressIdent="{Binding Address}"
                                DateIdent="{Binding DebtActualDate}"
                                SumPay="{Binding Sum}" />
                        </DataTemplate>

                    </ListView.ItemTemplate>
                </ListView>
                <StackLayout>
                    <pancakeView:PancakeView x:Name="GoodsLayot" Elevation="20" CornerRadius="50,50,0,0" BackgroundColor="#8D8D8D"
                                             Padding="0,20,0,10"
                                             VerticalOptions="FillAndExpand">
                        <!-- <StackLayout -->
                        <!--     HorizontalOptions="FillAndExpand" -->
                        <!--   -->
                        <!--     Orientation="Horizontal"> -->
                        <Grid HorizontalOptions="FillAndExpand"
                              ColumnSpacing="10"
                              Margin="20, 0, 20, 10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Frame CornerRadius="10"
                                   x:Name="FrameBtnHistory"
                                   Padding="0"
                                   Grid.Column="0" Grid.Row="0"
                                   >
                                <StackLayout
                                    Orientation="Horizontal"
                                    Spacing="7"
                                    VerticalOptions="CenterAndExpand"
                                    HorizontalOptions="Center">
                                    <xamarinJkh:IconView
                                        Source="ic_history_pay"
                                        Foreground="{Binding hex}"
                                        HeightRequest="24"
                                        WidthRequest="20" />
                                    <Button x:Name="LabelHistory"
                                            Text="История платежей"
                                            TextColor="White"
                                            Padding="0"
                                            FontAttributes="Bold"
                                            Clicked="OpenHistory"
                                            FontSize="12"
                                            BackgroundColor="Transparent" />
                                </StackLayout>
                            </Frame>

                            <Frame CornerRadius="10"
                                   x:Name="FrameBtnSaldos"
                                   Padding="0"
                                   Grid.Column="1" Grid.Row="0"
                                   HorizontalOptions="FillAndExpand">
                                <StackLayout
                                    Orientation="Horizontal"
                                    Spacing="0"
                                    Margin="18,0,0,0"
                                    VerticalOptions="CenterAndExpand"
                                    HorizontalOptions="Center">
                                    <xamarinJkh:IconView
                                        Source="ic_saldos"
                                        Foreground="{Binding hex}"
                                        Margin="-20,0,5,0"
                                        HeightRequest="24"
                                        WidthRequest="20" />
                                    <Button x:Name="LabelSaldos"
                                            Text="Квитанции"
                                            FontSize="12"
                                            Padding="0"
                                            FontAttributes="Bold"
                                            TextColor="White"
                                            Clicked="openSaldo"
                                            BackgroundColor="Transparent" />
                                </StackLayout>
                            </Frame>
                        </Grid>
                        <!-- </StackLayout> -->
                    </pancakeView:PancakeView>

                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>