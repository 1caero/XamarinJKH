<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xamarinJkh="clr-namespace:xamarinJKH;assembly=xamarinJKH"
             BackgroundColor="#F3F3F3"
             x:Class="xamarinJKH.Shop.PayShopPage">

    <ContentPage.Content>
        <StackLayout>
            <RelativeLayout HorizontalOptions="FillAndExpand"
                            VerticalOptions="Start">
                <Image x:Name="ImageTop"
                       Source="ic_top_event"
                       VerticalOptions="Fill"
                       HorizontalOptions="FillAndExpand"
                       Margin="0, -26, 0 ,0"
                       RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=0,
                             Constant=0}"
                       RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Height,
                             Factor=0,
                             Constant=0}" />


                <StackLayout x:Name="StackLayout"
                    RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=0,
                             Constant=15}"
                    RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Height,
                             Factor=0,
                             Constant=10}"
                    Orientation="Vertical">
                    <Label x:Name="UkName"
                           Text="Название"
                           FontAttributes="Bold"
                           FontSize="20"
                           TextColor="White" />
                    <StackLayout
                        Orientation="Horizontal">
                        <xamarinJkh:IconView x:Name="IconViewLogin"
                                             Source="ic_phone"
                                             HeightRequest="15"
                                             Foreground="White"
                                             Margin="-10, 0,0,0"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Center" />
                        <Label x:Name="LabelPhone"
                               Text="Телефон"
                               FontSize="16"
                               TextColor="White"
                               Margin="-5, 0, 0, 0"
                               VerticalOptions="Center" />
                    </StackLayout>
                    <StackLayout
                        Orientation="Horizontal">
                        <xamarinJkh:IconView x:Name="IconViewTech"
                                             Source="ic_tech"
                                             HeightRequest="20"
                                             Foreground="White"
                                             Margin="0, 10,0,0"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Center" />
                        <Label x:Name="LabelTech"
                               Text="Написать в тех.поддержку"
                               FontSize="16"
                               TextDecorations="Underline"
                               TextColor="White"
                               Margin="-10, 10, 0, 0"
                               VerticalOptions="Center" />
                    </StackLayout>
                    <StackLayout
                        x:Name="BackStackLayout"
                        Orientation="Horizontal"
                        Margin="0, 40, 0, 0"
                        HorizontalOptions="Start">
                        <xamarinJkh:IconView Source="ic_arrow_back"
                                             HeightRequest="15"
                                             Foreground="Black"
                                             HorizontalOptions="Center" />
                        <Label
                            Text="Назад "
                            FontSize="15"
                            TextColor="Black"
                            HorizontalOptions="Start" />
                    </StackLayout>
                </StackLayout>
                <Image x:Name="IconViewNameUk"
                       Source="icon_login"
                       HeightRequest="70"
                       RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=0.75,
                             Constant=10}"
                       RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                             Property=Height,
                             Factor=0,
                             Constant=25}" />
            </RelativeLayout>
            <ScrollView
                Margin="0,10,0,0"
                VerticalOptions="FillAndExpand">
                <StackLayout>
                    <Frame CornerRadius="15"
                           Margin="10, 10, 10, 5"
                           VerticalOptions="Start"
                           BackgroundColor="White"
                           Padding="15">
                        <StackLayout>
                            <StackLayout Orientation="Horizontal">
                                <xamarinJkh:IconView
                                    x:Name="IconViewShop"
                                    Source="ic_shop"
                                    HeightRequest="20"
                                    Foreground="{Binding hex}"
                                    WidthRequest="20"
                                    Margin="0, 0, 0, 0"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Center" />
                                <Label
                                    Text="Ваш заказ"
                                    FontSize="16"
                                    TextColor="Black"
                                    Margin="0, 0, 0, 0"
                                    FontAttributes="Bold"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="Center" />
                            </StackLayout>
                            <StackLayout Orientation="Horizontal"
                                         HorizontalOptions="FillAndExpand">
                                <StackLayout HorizontalOptions="FillAndExpand">
                                    <Label
                                        Text="Цена:"
                                        TextColor="Black"
                                        FontSize="15" />
                                    <Label Text="0 р"
                                           x:Name="LabelPriceBuscket"
                                           TextColor="Black"
                                           FontAttributes="Bold"
                                           FontSize="15" />
                                </StackLayout>
                                <StackLayout HorizontalOptions="FillAndExpand">
                                    <Label Text="Вес:"
                                           TextColor="Black"
                                           HorizontalTextAlignment="Start"
                                           HorizontalOptions="Start"
                                           FontSize="15" />
                                    <Label x:Name="LabelWeightBuscket"
                                           Text="0 кг"
                                           TextColor="Black"
                                           HorizontalTextAlignment="Start"
                                           HorizontalOptions="Start"
                                           FontAttributes="Bold"
                                           FontSize="15" />
                                </StackLayout>
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                    <Frame CornerRadius="15"
                           Margin="10, 0, 10, 5"
                           VerticalOptions="Start"
                           BackgroundColor="White"
                           Padding="15">
                        <StackLayout>
                            <Label
                                Text="Способ оплаты:"
                                TextColor="Black"
                                HorizontalOptions="Start"
                                FontSize="15" />
                            <Frame CornerRadius="10"
                                   VerticalOptions="Start"
                                   BackgroundColor="White"
                                   BorderColor="{Binding hex}"
                                   Padding="15">
                                <Label
                                    Text="По карте"
                                    TextColor="Gray"
                                    HorizontalOptions="Center"
                                    FontSize="15" />
                            </Frame>
                        </StackLayout>
                    </Frame>
                    <Frame CornerRadius="15"
                           Margin="10, 0, 10, 5"
                           VerticalOptions="Start"
                           BackgroundColor="White"
                           Padding="15">
                        <StackLayout>
                            <StackLayout Orientation="Horizontal">
                                <xamarinJkh:IconView
                                    Source="ic_card_pay_black"
                                    HeightRequest="20"
                                    Foreground="{Binding hex}"
                                    WidthRequest="20"
                                    Margin="0, 0, 0, 0"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Center" />
                                <Label
                                    Text="Оплата банковской картой:"
                                    FontSize="16"
                                    TextColor="Black"
                                    Margin="0, 0, 0, 0"
                                    FontAttributes="Bold"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="Center" />
                            </StackLayout>
                            <Label
                                Text="Электронный чек будет  доступен в личном кабинете"
                                TextColor="Gray"
                                HorizontalOptions="Start"
                                FontSize="15" />
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </ScrollView>
            <ActivityIndicator x:Name="progress"
                               IsRunning="true"
                               HeightRequest="40"
                               WidthRequest="40"
                               Margin="0,0,0,15"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               IsVisible="False"
                               Color="{Binding hex}" />
            <StackLayout
                x:Name="StackLayouPay"
                HeightRequest="40" BackgroundColor="{Binding hex}" HorizontalOptions="FillAndExpand">
                
                <Label
                    x:Name="LabelPay"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    Text="Заказать" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>