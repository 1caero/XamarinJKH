                                                        </Frame>
                                                    </Grid>
                                                </Frame>
                                                <Label Text="3"
                                                       FontSize="{Binding fontSize}"
                                                       TextColor="#878787"
                                                       HorizontalOptions="Center" />
                                            </StackLayout>
                                            <Label HeightRequest="1"
                                                   BackgroundColor="White"
                                                   HorizontalOptions="FillAndExpand" />

                                            <StackLayout Spacing="-10">
                                                <Frame
                                                    Padding="0"
                                                    CornerRadius="0"
                                                    HasShadow="False"
                                                    BackgroundColor="Transparent"
                                                    IsClippedToBounds="True">
                                                    <Grid HeightRequest="50" IsClippedToBounds="True">
                                                        <xamarinJkh:IconView Source="ic_star"
                                                                             HeightRequest="{Binding StarSize}"
                                                                             WidthRequest="{Binding StarSize}"
                                                                             Foreground="{Binding hex}"
                                                                             VerticalOptions="Center" />
                                                        <Frame
                                                            Margin="0"
                                                            Padding="0"
                                                            CornerRadius="5"
                                                            BackgroundColor="Transparent"
