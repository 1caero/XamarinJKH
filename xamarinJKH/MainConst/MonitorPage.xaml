                                                    <StackLayout
                                                        Orientation="Horizontal" Spacing="0">
                                                        <Label Text="25"
                                                               TextColor="{Binding hex}"
                                                               FontSize="{Binding fontSize}"
                                                               FontAttributes="Bold" />
