                                                            Padding="0"
                                                            CornerRadius="5"
                                                            BackgroundColor="Transparent"
                                                            HasShadow="False"
                                                            IsClippedToBounds="True">
                                                            <Label Text="1"
                                                                   x:Name="LabelOneStar"
                                                                   FontSize="{Binding fontSize}"
                                                                   HorizontalOptions="Center"
                                                                   Margin="0"
                                                                   VerticalOptions="Center"
                                                                   TextColor="White" />
                                                        </Frame>
                                                    </Grid>
                                                </Frame>
                                                <Label Text="1"
                                                       FontSize="{Binding fontSize}"
                                                       TextColor="#878787"
                                                       HorizontalOptions="Center" />
                                            </StackLayout>
                                            <Label HeightRequest="1"
                                                   BackgroundColor="White"
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="FillAndExpand" />

                                            <StackLayout Spacing="-10">
                                                <Frame
                                                    Padding="0"
                                                    CornerRadius="0"
                                                    HasShadow="False"
                                                    VerticalOptions="Fill"
                                                    BackgroundColor="Transparent"
                                                    IsClippedToBounds="True">
                                                    <Grid HeightRequest="50" IsClippedToBounds="True">
                                                        <xamarinJkh:IconView Source="ic_star"
                                                                             HeightRequest="{Binding StarSize}"
                                                                             WidthRequest="{Binding StarSize}"
                                                                             Foreground="{Binding hex}"
                                                                             VerticalOptions="Center" />
                                                        <Frame
                                                            Margin="0"
                                                            Padding="0"
                                                            CornerRadius="5"
                                                            BackgroundColor="Transparent"
                                                            HasShadow="False"
                                                            IsClippedToBounds="True">
                                                            <Label Text="1"
                                                                   x:Name="LabelTwoStar"
                                                                   FontSize="{Binding fontSize}"
                                                                   HorizontalOptions="Center"
                                                                   Margin="0"
                                                                   VerticalOptions="Center"
                                                                   TextColor="White" />
                                                        </Frame>
                                                    </Grid>
                                                </Frame>
                                                <Label Text="2"
