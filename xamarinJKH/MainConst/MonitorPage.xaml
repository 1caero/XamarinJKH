                                   FontAttributes="Bold"
                                   TextColor="White" />
                            <Label Text="Оценки"
                                   FontSize="{Binding fontSize}"
                                   TextColor="White" />

                        </StackLayout>
                        <StackLayout Spacing="5"
                                     HorizontalOptions="EndAndExpand"
                                     VerticalOptions="Center" Orientation="Horizontal">
                            <StackLayout Spacing="-10">
