                                                                             VerticalOptions="Center"
                                                                             Foreground="{Binding hex}"
                                                                             HorizontalOptions="Center" />
                                                    </StackLayout>
                                                    <Label
                                                        HeightRequest="1"
                                                        BackgroundColor="{Binding hex}"
                                                        HorizontalOptions="Fill" />
                                                </StackLayout>

                                            </StackLayout>
                                        </StackLayout>

                                        <Label WidthRequest="1"
                                               Grid.Column="1"
                                               Grid.Row="0"
                                               BackgroundColor="#878787"
                                               HorizontalOptions="CenterAndExpand"
                                               VerticalOptions="FillAndExpand" />
                                        <StackLayout Orientation=" Horizontal" Grid.Row="0" Grid.Column="2">
                                            <xamarinJkh:IconView Source="ic_time"
                                                                 HeightRequest="{Binding fontSize2}"
                                                                 WidthRequest="{Binding fontSize2}"
                                                                 Foreground="{Binding hex}"
                                                                 HorizontalOptions="Center" />
                                            <Label
                                                Text="Просрочено:"
                                                FontSize="{Binding fontSize3}"
                                                TextColor="Black"
                                                VerticalOptions="Center"
                                                HorizontalOptions="Start" />
                                            <StackLayout Spacing="0">
                                                <StackLayout
                                                    Spacing="0"
                                                    Orientation="Horizontal">
                                                    <Label Text="25"
                                                           TextColor="{Binding hex}"
                                                           FontSize="{Binding fontSize}"
                                                           FontAttributes="Bold" />
                                                    <xamarinJkh:IconView Source="ic_arrow_forward"
                                                                         x:Name="IconViewPr"
