                    <StackLayout x:Name="ossContent" VerticalOptions="FillAndExpand" Margin="20,10,20,0">
                        <Frame x:Name="OssTypeFrame" HeightRequest="80" MinimumHeightRequest="60" WidthRequest="900"
                       BackgroundColor="#8d8d8d" CornerRadius="40" HorizontalOptions="FillAndExpand"
                       VerticalOptions="Start">
                            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Start"
                                 Margin="0,-20,0,0">
                                <Button x:Name="ButtonActive" Text="Активные" TextColor="White" FontAttributes="Bold"
                                FontSize="Medium" BackgroundColor="Transparent" BorderWidth="0"
                                Clicked="Button_Clicked" />
                                <Button x:Name="ButtonArchive" Text="Завершенные" TextColor="White" FontAttributes="Bold"
                                FontSize="Medium" BackgroundColor="Transparent" BorderWidth="0"
                                Clicked="Button_Clicked_1" />
                            </StackLayout>
                        </Frame>
                        <ScrollView x:Name="OSSList" Margin="0,-80,0,0">
                            <StackLayout x:Name="OSSListContent" HorizontalOptions="FillAndExpand" />
                        </ScrollView>
                    </StackLayout>
                </StackLayout>
            </Grid>

            
