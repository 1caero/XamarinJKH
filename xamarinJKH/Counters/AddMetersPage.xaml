                                                </pancake:PancakeView>
                                                <Label x:Name="d07" Text="0" TextColor="#A2A2A2" FontSize="20" HorizontalTextAlignment="Center" IsVisible="{Binding Path=IsVisible, Source={x:Reference d7}}"></Label>
                                            </StackLayout>

                                            <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" >
                                                <pancake:PancakeView BorderColor="Gray" BorderThickness="1"  Padding="0" CornerRadius="5,5,0,5" WidthRequest="30"  MinimumWidthRequest="25" HeightRequest="80" MinimumHeightRequest="60" >
                                                    <Grid VerticalOptions="FillAndExpand" RowSpacing="0" >
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="0.85*"></RowDefinition>
                                                            <RowDefinition Height="0.15*"></RowDefinition>
