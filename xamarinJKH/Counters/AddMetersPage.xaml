                            </StackLayout>

                                    <StackLayout
                                    IsVisible="False"
                                    Orientation="Horizontal">
                                <Label
                                        x:Name="LabelseparatorFio"
                                        HeightRequest="2"
                                        Margin="20, 0, 20, 0"
                                        BackgroundColor="Red"
                                        HorizontalOptions="FillAndExpand" />

                            </StackLayout>
                            <!--<StackLayout
                                    Margin="0, 0, 0, 0"
                                    Orientation="Horizontal">
                                <Label x:Name="PredCount"
                                           Text="{Binding PrevCounter, Converter={x:StaticResource CounterFormat}}"
                                           HorizontalTextAlignment="Center"
                                           HorizontalOptions="FillAndExpand"
                                           CharacterSpacing="15"
                                           MaxLines="1"
                                           FontSize="20"
                                           TextColor="#A2A2A2"
                                           Margin="20, 10, 20, 0" />
                            </StackLayout>-->
                            <StackLayout
                                    Orientation="Horizontal">
                                <Label
                                        Text="Предыдущие показания"
                                        FontSize="Micro"
                                        TextColor="#A2A2A2"
                                        HeightRequest="20"
                                        Margin="0, 10,0,0"
                                        HorizontalTextAlignment="Center"
                                        HorizontalOptions="FillAndExpand" />
                            </StackLayout>

                        </StackLayout>
                        <ActivityIndicator x:Name="progress"
                                               IsRunning="true"
                                               IsVisible="False"
                                               Color="Red" />
                        <Frame CornerRadius="15"
                                   Margin="0, 10, 0, 10"
                                   x:Name="FrameBtnLogin"
                                   Padding="0">
                            <StackLayout
                                    x:Name="SaveStackLayout"
                                    Orientation="Horizontal"
                                    Margin="-80, 0, 0, 0"
                                    HorizontalOptions="Center"
                                    VerticalOptions="FillAndExpand">
                                <local:IconView x:Name="IconViewSave"
