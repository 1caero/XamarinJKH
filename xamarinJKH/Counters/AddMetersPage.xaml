                                                            <RowDefinition Height="0.15*"></RowDefinition>
                                                        </Grid.RowDefinitions>
                                                        <xamarinJkh:CounterEntryNew x:Name="d1" TextChanged="d1_Completed" Focused="Entry_Focused">
                                                            <Entry.Behaviors>
                                                                <behaviors:EntryLengthValidatorBehavior MaxLength="1" />
                                                            </Entry.Behaviors>
                                                        </xamarinJkh:CounterEntryNew>
